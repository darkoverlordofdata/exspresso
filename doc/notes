layours & partials

APPPATH+"themes/#{$default}/views/layouts/html.eco"
  top level html -
    head tags: title, meta, link, script
    body regions: page footer

APPPATH+"themes/#{$default}/view/partials/page.eco"
  content level html-
    partials like blog_posts

APPPATH+"themes/#{$default}/view/partials/footer.eco"
  footer html
    partials like copyright_notice, performance

cache file - md5(@view)+'.cache'


layout: 'layouts/default.tpl.html'

