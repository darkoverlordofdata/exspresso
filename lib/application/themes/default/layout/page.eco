<div id="wrap">

    <div class="container">

        {$header}

        <div class="clearfix"></div>
        {$navigation}

        <div class="clearfix"></div>
        <% if @$sidenav: %>
            <div class="row">
                <div class="span3">
                    {$sidenav}
                </div>
                <div class="span9">
                    {$content}
                </div>
            </div>
        <% else: %>
            {$content}
        <% end %>

        <% if @$flash: %>
            <div class="clearfix"></div>
            {$flash}
        <% end %>

        <% if @$sidebar_first || @$sidebar_second: %>
        <aside class="sidebars">
            {$sidebar_first}
            {$sidebar_second}
        </aside>
        <% end %>

    </div>
    <div id="push"></div>
</div>
{$footer}