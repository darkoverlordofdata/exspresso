<header>

    <% if @$logo: %>
        <%- @anchor("", @img("images/{$logo}"), title: "Home", rel: "home", id: "logo" ) %>
    <% end %>

    <% if @$site_name || @$site_slogan: %>
    <hgroup id="name-and-slogan">

        <% if @$site_name: %>
            <h1>{$site_name}</h1>
        <% end %>

        <% if @$site_slogan: %>
            <h1><blockquote><small>{$site_slogan}</small></blockquote></h1>
        <% end %>

    </hgroup>
    <% end %>
</header>
