<h1>Edit Group</h1>
<p>Please enter the group information below.</p>

<div id="infoMessage"><%- @message %></div>

<%- @form_open(@current_url()) %>

      <p>
            Group Name: <br />
            <%- form_input(@group_name) %>
      </p>

      <p>
            Group Description: <br />
            <%- form_input(@group_description) %>
      </p>

      <p><%- @form_submit('submit', 'Save Group') %></p>

<%- @form_close() %>