<div class='mainInfo'>

	<h1>Users</h1>
	<p>Below is a list of the users.</p>
	
	<div id="infoMessage"><%= @message %></div>
	
	<table cellpadding=0 cellspacing=10>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Groups</th>
			<th>Status</th>
		</tr>
		<% for $user in @users : %>
			<tr>
				<td><%= @user.first_name %></td>
				<td><%= @user.last_name %></td>
				<td><%= @user.email %></td>
				<td>
					<% for $group in @user.groups : %>
						<%= $group.name %><br />
	                <% end %>
				</td>
				<td><%- if @user.active is true then @anchor("auth/deactivate/"+@user.id, 'Active') else @anchor("auth/activate/"+ @user.id, 'Inactive') %></td>
			</tr>
		<% end %>
	</table>
	
	<p><a href="<%= @site_url('auth/create_user') %>">Create a new user</a></p>
	
</div>
