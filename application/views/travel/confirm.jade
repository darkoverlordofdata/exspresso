extends ../layout

block content

  #main
    .section
      h1 Confirm Hotel Booking
    .section
      form(name="confirm", action="/book", method="post")
        input(type="hidden", name="hotelId", value="#{hotel.id}")
        fieldset

          .field
            .label Name:
            .output= hotel.name
          .field
            .label Address:
            .output= hotel.address
          .field
            .label City, State:
            .output= hotel.city
          .field
            .label Zip:
            .output= hotel.zip
          .field
            .label Country:
            .output= hotel.country
          .field
            .label Total Payment:
            .output= booking.totalPayment
          .field
            .label Check In Date:
            .output= booking.checkinDate
          .field
            .label Check Out Date:
            .output= booking.checkoutDate
          .field
            .label Credit Card #:
            .output= booking.creditCard

          .buttonGroup
            input(name="confirm", type="submit", value="Confirm")
            &nbsp;
            input(name="revise", type="submit", value="Revise")
            &nbsp;
            input(name="cancel", type="submit", value="Cancel")
