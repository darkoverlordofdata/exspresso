extends ./layout

block content
  h1 Login Required
  .row
    .span1
    .span4
      br
      p Valid username/passwords are:
      ul
        li keith/melbourne
        li erwin/leuven
        li jeremy/atlanta
        li scott/rochester

  .hero-unit
    form(name='f', action='/travel/#{db}/authenticate', method='post')
      input(type="hidden",name="url",id="url",value="#{url}")
      input(type="hidden",name="hotelId",id="hotelId",value="#{hotelId}")
      input(type="hidden",name="bookingId",id="bookingId",value="#{bookingId}")
      .control-group
        label.control-label(for="username") User:
        input(id="username",name="username",type="text")
      .control-group
        label.control-label(for="password") Password:
        input(id="password",name="password",type="text")
      .control-group
        label.control-label(for="remember") Don't ask for my password for two weeks:
        input(id="password",name="remember",type="checkbox")
      .control-group
      input(name='submit', type='submit', value='Login')

