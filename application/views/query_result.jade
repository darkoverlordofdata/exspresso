extends ./layout

block content
  .container
    p
    .hero-unit
      h1 Query results:

      .row
        table.table.table-striped.table-hover.table-condensed
          thead
            tr
              th Name
              th Address
              th City, State
              th Zip

          tbody
            each hotel in hotels
              tr
                td= hotel.name
                td= hotel.address
                td= hotel.city + ', ' + hotel.state
                td= hotel.zip

        p
        p Page rendered in {elapsed_time} ms

    .row
      .span8
      .span4
        footer
          | powered by &nbsp;
          a(href="https://npmjs.org/package/exspresso") e x s p r e s s o