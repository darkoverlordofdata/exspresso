extends ./layout

block content
  .hero-unit
    span.errors
    h2 Search Hotels
    form.form-search(name='mainForm', method='post', action='/pgorm/hotels')
      input(type='hidden', name='mainForm', value='mainForm')
      input.input-medium.search-query(type="text", name='searchString', value='')
      button.btn.btn-primary(name='findHotels', type='submit', value='Find Hotels') Search

      p
      label(for='pageSize')
        | Maximum results:
      p
      select#pageSize(name='pageSize', size='1')
        option(value='5', selected='selected') 5
        option(value='10') 10
        option(value='20') 20

    h2 Current Hotel Bookings
    .row
      table.table.table.striped.table-hover.table-condensed
        thead
          tr
            th Name
            th Address
            th City, State
            th Check in date
            th Check out date
            th Confirmation number
            th Action
        tbody
          each booking in bookings
            tr
              td= booking.name
              td= booking.address
              td= booking.city + ', ' + booking.state
              td= booking.checkinDate
              td= booking.checkoutDate
              td= booking.id
              td
                a.btn(href="/mytravel/cancel/#{hotel.id}") Cancel


    p Page rendered in {elapsed_time} ms
