extends ./layout

block content

  #content
    #sign_in
      h2 Sign In

      form#new_user_session.new_user_session(action='/authenticate', method='post')
        input(type="hidden",name="url",value="#{url}")
        .field
          .label
            label(for='email') Email
          .value
            input#email(name='email', size='30', type='text', value='')
        .field
          .label
            label(for='password') Password
          .value
            input#password(name='password', size='30', type='password')
        .field.remember_me
          .label
          .value
            input(type='checkbox', value='1', name='remember_me')
            label(for='remember_me') Remember me
        .submit
          button#user_submit.btn.primary(name='commit', type='submit') Sign In
          a.forgot(href='/forgot_password') Forgot Password?

      err = flashdata('error')
      if err != ''
        .alert-message.error
          p
            b Error:
            |  #{err}
