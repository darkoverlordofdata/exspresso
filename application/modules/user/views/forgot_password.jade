extends layout

block content
  #content
    #sign_in
      h2 Forgot Password
      p(style='margin-bottom: 12px;')
        | Provide the email address you are registered with and we will email you instructions for resetting your password.
      form#new_user_session.new_user_session(action='/forgot_password', method='post')
        .field
          .label
            label(for='email') Email
          .value
            input#email(name='email', size='30', type='text', value='')
        .submit
          button#user_submit.btn.primary(name='commit', type='submit') Submit
